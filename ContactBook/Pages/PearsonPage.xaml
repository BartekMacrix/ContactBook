<Page x:Class="ContactBook.PearsonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ContactBook"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PearsonPage"
      Loaded="Window_Loaded">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        
        <StackPanel Grid.Column="0" HorizontalAlignment="Stretch" 
              VerticalAlignment="Stretch" MinHeight="400" Margin="20"
              Background="AliceBlue">
            <TextBlock Text="First Name:"/>
            <TextBox Text="{Binding FirstName, Mode=TwoWay}"/>

            <TextBlock Text="Last Name:"/>
            <TextBox Text="{Binding LastName, Mode=TwoWay}" />

            <TextBlock Text="Street Name"/>
            <TextBox Text="{Binding StreetName, Mode=TwoWay}"/>

            <TextBlock Text="House Number"/>
            <TextBox Text="{Binding HouseNumber, Mode=TwoWay}"/>

            <TextBlock Text="Apartment Number"/>
            <TextBox Text="{Binding ApartmentNumber, Mode=TwoWay}"/>

            <TextBlock Text="PostalCode Name"/>
            <TextBox Text="{Binding PostalCode, Mode=TwoWay}"/>

            <TextBlock Text="Town"/>
            <TextBox Text="{Binding Town, Mode=TwoWay}"/>

            <TextBlock Text="Phone Number"/>
            <TextBox Text="{Binding PhoneNumber, Mode=TwoWay}"/>

            <TextBlock Text="Dat Of Birth"/>
            <TextBox Text="{Binding DateOfBirth, Mode=TwoWay}"/>

            <TextBlock Text="Age"/>
            <TextBox Text="{Binding Age, Mode=TwoWay}"/>

            <Button Content="Dodaj" Command="{Binding AddPearsonCommand }"/>
            <Button Content="Edytuj"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Gray">
            <ScrollViewer MinHeight="300" Height="300" MinWidth="450">
                <ItemsControl ItemsSource="{Binding PearsonList}" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:Pearson />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="red">
            <Button Content="UPDATE" Command="{Binding UpdateDatabase}"/>
            <Button Content="CANCEL" Command="{Binding CancelUpdates}"/>
        </StackPanel>
    </Grid>
</Page>
